extends layout

block content
  h2.w3-center Edição #{edicao._id}

  div.w3-container.w3-padding.w3-white.w3-card-4
    p
      strong Identificador da Edição: 
      | #{edicao._id}
    p
      strong Ano da Edição: 
      | #{edicao.anoEdição}
    p
      strong País Organizador: 
      a(href=`/paises/${edicao.organizacao}`, class="w3-text-blue") #{edicao.organizacao}
    p
      strong País Vencedor: 
      a(href=`/paises/${edicao.vencedor}`, class="w3-text-blue") #{edicao.vencedor}

    h3 Lista de Músicas
    div.w3-responsive
      table.w3-table.w3-striped.w3-bordered.w3-hoverable.w3-small.w3-large
        thead
          tr.w3-blue
            th Nome da Música
            th Intérprete
            th País Representado
        tbody
          each musica in edicao.musicas
            tr
              td= musica.título
              td= musica.intérprete
              td= musica.país

    p
      a(href='/', class='w3-button w3-blue') Voltar à página principal